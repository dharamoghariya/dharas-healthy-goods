<div class="contactMain" id="contactmain">
    <h1 class="contactHeader">Welcome</h1>

    {{#each errors}}
    <p class="error">{{this}}</p>
    {{/each}}

    <!-- Submit the form to login using a POST request -->
    <form id="contact-form" action="/login" method="POST">
        <div class="form-row">
            <div class="form-group col">
                <label for="email"><span class="text-danger">*</span> Email Address</label>
                <input id="email" class="form-control" name="email" autocomplete="email" value="{{values.email}}"
                    placeholder="user@example.com" type="email" tabindex="1" />
                {{#if validationMessages.email}}
                <span class="error">{{ validationMessages.email }}</span><br />
                {{/if}}
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col">
                <label for="password"><span class="text-danger">*</span> Password</label>
                <input id="password" class="form-control" name="password" value="{{values.password}}"
                    placeholder="******" type="password" tabindex="2" />
                {{#if validationMessages.password}}
                <span class="error">{{ validationMessages.password }}</span><br />
                {{/if}}
            </div>
        </div>

        <br />

        <div class="form-check">
            <div class="form-group col">
                <input class="form-check-input" type="checkbox" name="isClerk" value="isClerk" id="isClerk"
                    tabindex="3">
                <label class="form-check-label" for="isClerk">
                    Data entry clerk
                </label>
                {{#if validationMessages.isClerk}}
                <span class="error">{{ validationMessages.isClerk }}</span><br />
                {{/if}}
            </div>
        </div>

        <br />

        <div class="row">
            <div class="form-group col">
                <input class="btn btn-primary" type="submit" name="submit" value="Log In" tabindex="4" />
            </div>
        </div>
    </form>
</div>